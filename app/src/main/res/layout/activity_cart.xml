<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:orientation="vertical"
    tools:context=".CartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view2"
                    android:layout_width="45dp"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="14.5dp"
                    android:layout_weight="1"
                    android:background="@color/orange_500" />

                <TextView
                    android:id="@+id/breakfast_text"
                    android:layout_width="10dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:paddingStart="0dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="8dp"
                    android:text="Cart"
                    android:textAlignment="center"
                    android:textColor="#888080"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="45dp"
                    android:layout_height="2.5dp"
                    android:layout_marginTop="14.5dp"
                    android:layout_weight="1"
                    android:background="@color/orange_500" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#F3EEEE"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/title_item_name"
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:paddingTop="10dp"
                        android:text="Item"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/title_item_quantity"
                        android:layout_width="95dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="170dp"
                        android:drawablePadding="-55dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="7dp"
                        android:text="Quantity"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/title_item_amount"
                        android:layout_width="95dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="265dp"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="7dp"
                        android:text="$"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="1"
                    android:background="@color/orange_500" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/total_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/total_view4"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="2.5dp"
                    android:layout_weight="1"
                    android:background="@color/orange_500" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/total_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#F3EEEE"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/total_item_name"
                        android:layout_width="170dp"
                        android:layout_height="45dp"
                        android:paddingTop="4dp"
                        android:text="Total"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/total_item_quantity"
                        android:layout_width="98dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="170dp"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="7dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/total_item_amount"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="265dp"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="7dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/checkout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="Place Order"
                    app:cornerRadius="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Click the back button to  continue shopping or edit shopped items." />

        </LinearLayout>
    </ScrollView>

</LinearLayout>